doctype html
html(lang="ko")
    head 
        //- looking for a #{pageTitle} variable
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        nav
            ul 
                if loggedIn 
                    li 
                        a(href="/users/edit") Edit Profile
                    li 
                        a(href="/users/logout") Logout
                else
                    li 
                        a(href="/join") Join
                    li 
                        a(href="/login") Login
        header
            h1=pageTitle
            //- make an empty block so other pug files can add codes
        nav 
            ul
                if loggedIn
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
                    li
                        a(href="/videos/upload") Upload Video
                else
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search

        main
            block content
    include partials/footer